{
  "manifest_version": 3,

  "name": "nba.com default edition setter for Australians",
  "version": "1.0.0",
  "description": "Automatically sets the default nba.com edition to 'NBA US' instead of 'AU NBA'",
  "author": "Max Goodwin",

  "action": {
    "default_popup": "index.html",
    "default_title": "Auto set nba.com edition"
  },
  "icons": {
    "128": "icon.png"
  },

  "host_permissions": [
    "*://*.sportingnews.com/",
    "*://*.nba.com/"
  ],
  "permissions": [
    "webNavigation",
    "cookies",
    "tabs",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  }
}